<h2>Записатися</h2>

<form action="/visit" method="POST" role="form">
<label>Виберіть вашого перукаря:</label>
<select name="barber" class="form-control">
  <option <%= params[:barber] == 'Walter White' ? 'selected' : '' %>>Walter White</option>
  <option <%= params[:barber] == 'Jessie Pinkman' ? 'selected' : '' %>>Jessie Pinkman</option>
  <option <%= params[:barber] == 'Gus Fring' ? 'selected' : '' %>>Gus Fring</option>
</select>
<br />
  <div class="form-group">
    <label>Введіть своє ім'я:</label>
    <input type="text" name="name" class="form-control" placeholder="Введіть тут своє ім'я" value="<%= params[:name]%>">
  </div>

  <div class="form-group">
    <label>Введіть свій телефон:</label>
    <input type="text" name="phone" class="form-control" placeholder="Введіть тут свій номер телефону" value="<%= params[:phone]%>">
  </div>

  <div class="form-group">
    <label>Коли Вас чекати? </label>
    <input type="datetime-local" name="date" class="form-control" placeholder="Введіть дату й час свого візиту" value="<%= params[:date]%>">
  </div>

  <div class="form-group">
    <label>Колір Вашого волосся буде: </label>
    <select id="color">
      <option value="#7bd148">Green</option>
      <option value="#5484ed">Bold blue</option>
      <option value="#a4bdfc">Blue</option>
      <option value="#46d6db">Turquoise</option>
      <option value="#7ae7bf">Light green</option>
      <option value="#51b749">Bold green</option>
      <option value="#fbd75b">Yellow</option>
      <option value="#ffb878">Orange</option>
      <option value="#ff887c">Red</option>
      <option value="#dc2127">Bold red</option>
      <option value="#e1e1e1">Gray</option>
      <option value="#dbadff">Purple</option>
</select>
  </div>

  <button type="submit" class="btn btn-primary">Записатися</button>
</form>
